{% extends 'page.nunjucks' %}

{% block menu %}
<li><a href="/">Home</a></li>
{% endblock %}

{% block content %}
<h2>Recent Posts</h2>
{% for post in site.posts %}
<div class="blogpost">
<h3 class="post-title">{{post.frontMatter.title}}</h3>
{{ post.body | safe }}
</div>
{% endfor %}
{% endblock %}
